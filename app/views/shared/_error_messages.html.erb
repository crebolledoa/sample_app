<% if @user.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(object.errors.count, "error") %> <!-- pluralize takes an integer argument and then returns the number with a properly pluralized version of its second argument. -->
			prohibited this <%= object.class.to_s.underscore.humanize.downcase%> from being saved:</h2>
	<p>There were problems with the following fields:</p>
	<ul>
		<% object.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	</div>
<% end %>