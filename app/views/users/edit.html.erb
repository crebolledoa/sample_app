<h1>Edit user</h1>
<%= form_for(@user) do |f| %>

	<%= render 'fields', f: f %>

	<div class="actions">
		<%= f.submit "Update" %> 
	</div>
	<div>
		<%= gravatar_for @user %>
		<%= link_to "change", "http://gravatar.com/emails", :target => "_blank" %>
	</div>
<% end %>

<!--
	When constructing a form using form_for(@user), Rails uses POST if @user.new_record? is true and PUT if it is false. 
-->